# GitHub CodeQL Configuration Example
# Copy this to .github/codeql/codeql-config.yml and customize as needed

name: "CodeQL Configuration"

# Disable default queries if you want to run only custom queries
# disable-default-queries: true

# Query filters
queries:
  - uses: security-extended
  - uses: security-and-quality

# Paths to exclude from scanning
paths-ignore:
  # Test directories
  - "tests/**"
  - "__tests__/**"
  - "test/**"
  - "e2e/**"
  - "cypress/**"
  - "spec/**"
  
  # Test files
  - "**/*.test.ts"
  - "**/*.test.tsx"
  - "**/*.test.js"
  - "**/*.test.jsx"
  - "**/*.spec.ts"
  - "**/*.spec.tsx"
  - "**/*.spec.js"
  - "**/*.spec.jsx"
  - "**/*.e2e.test.ts"
  - "**/*.e2e.spec.ts"
  
  # Test fixtures and mocks
  - "**/fixtures/**"
  - "**/mocks/**"
  - "**/__mocks__/**"
  - "**/test-utils/**"
  - "**/test-helpers/**"
  
  # Build and distribution
  - "dist/**"
  - "build/**"
  - ".build/**"
  - "out/**"
  
  # Dependencies
  - "node_modules/**"
  
  # Coverage reports
  - "coverage/**"
  - ".nyc_output/**"
  
  # Documentation
  - "docs/**"
  - "*.md"

# Paths to explicitly include (optional)
paths:
  - "src/**"
  - "lib/**"
  - "app/**"

# Custom pack specifications (optional)
# packs:
#   - codeql/javascript-queries
#   - codeql/typescript-queries
